<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<style>
    
</style>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <h1>Hello World EJS</h1>

    <div class="w3-container">
        <h2>Hoverable Table</h2>
      
        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < dataUser.length; i++) { %>
                <tr>
                  <td><%= dataUser[i].id %></td>
                  <td><%= dataUser[i].firstName %></td>
                  <td><%= dataUser[i].lastName %></td>
                  <td>
                    <a target="_blank" href="/detail/user/<%= dataUser[i].id %>">Detail</a>
                    <a href="/edit-user/<%= dataUser[i].id %>">Edit</a>
                    <form action="/delete-user" method="post">
                      <input type="text" value="<%= dataUser[i].id %>" hidden name="userId">
                      <button type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
             <% } %>
          </tbody>
        </table>
    </div>
    
    <form action="/create-new-user" method="post">
      <label>First name:</label><br>
      <input type="text" id="fname" name="firstName"><br>
      <label>Last name:</label><br>
      <input type="text" id="lname" name="lastName"><br>
      <label>Email:</label><br>
      <input type="text" id="email" name="email"><br>
      <label>Address:</label><br>
      <input type="text" id="address" name="address"><br><br>
      <input type="submit" value="Submit">
    </form> 
</body>
</html>